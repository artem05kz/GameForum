@page "{id:int}"
@model GameForum.Pages.Forum.Messages.EditModel
@{
    ViewData["Title"] = "Редактировать сообщение";
}
<h1>Редактировать сообщение</h1>
<form method="post">
    <div class="mb-3">
        <label class="form-label">Текст сообщения</label>
        <textarea class="form-control" asp-for="Content" rows="5" maxlength="2000"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a class="btn btn-secondary" href="/forum/topic/@Model.TopicId">Отмена</a>
</form>

