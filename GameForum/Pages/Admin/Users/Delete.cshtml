@page "{id:int}"
@model GameForum.Pages.Admin.Users.DeleteModel
@{
    ViewData["Title"] = "Удалить пользователя";
}

<h1>Удалить пользователя</h1>

<div class="alert alert-warning">Вы действительно хотите удалить пользователя @Model.TargetUser?.DisplayName (@Model.TargetUser?.Username) (Id=@Model.TargetUser?.Id)?</div>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a class="btn btn-secondary" href="/admin/users">Отмена</a>
</form>
